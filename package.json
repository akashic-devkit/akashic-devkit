{
  "name": "akashic-devkit",
  "private": true,
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "type": "module",
  "scripts": {
    "build:all": "turbo run build",
    "dev:all": "turbo run dev",
    "deploy:all": "turbo run deploy",
    "lint:all": "turbo run lint",
    "format:all": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter=web",
    "build:web": "turbo run build --filter=web",
    "dev:cli": "turbo run dev --filter=@akashic-devkit/cli",
    "build:cli": "turbo run build --filter=@akashic-devkit/cli",
    "deploy:cli": "turbo run deploy --filter=@akashic-devkit/cli",
    "cli": "node packages/cli/dist/index.js",
    "prepare": "husky",
    "create:component": "cd apps/web && pnpm create:component",
    "create:hook": "cd apps/web && pnpm create:hook"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/format": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
